<div class='row'>
  <div class='col-lg-12 text-center'>
    <h1>Find Tweets</h1>
  </div>
</div>
<div class='row'>
  <div class='col-lg-12'>
    <div class='form-group'>
      <div class='row'>
        <div class="col-lg-3">
        </div>
        <div class='col-lg-6'>
          <%= form_tag('/tweets/find', method: 'get') do %>
            <div class='row'>
              <div class='col-lg-10 txt-tweet'>
                <%= text_field_tag 'search_term', params['search_term'] || nil, class:'form-control' %>
              </div>
              <div class='col-lg-2 text-right btnSearch'>
                <%= submit_tag 'Search', class:'btn btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="col-lg-3">
        </div>
      </div>
      <br>
      <div class='row'>
        <div class='col-lg-3'>
        </div>
        <% if @tweets.present? %>
          <div class='col-lg-6 tweets-container'>
            <% @tweets.each do |tweet| %>
              <p> <%= tweet.text %> </p>
              <hr>
            <% end %>
          </div>
        <% end %>
        <div class='col-lg-3'>
        </div>
      </div>
    </div>
  </div>
</div>


